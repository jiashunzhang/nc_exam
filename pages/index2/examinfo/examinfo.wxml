<!--pages/papers/papers.wxml-->
<view class="container">
    <view style="width: 100%;display: flex;flex-direction: column;justify-content: center">
        <text style="text-align: center;font-size:25rpx">—— ◆ 考试信息汇总 ◆ ——</text>
        <view wx:if="{{ papers.length == 0 }}" style="display: flex; flex-direction: column; justify-content: center; align-items: center">
            <image src="../../../statics/images/自习.png" style="width: 250rpx; height: 250rpx"></image>
            <view style="color: red">您还没有进行过考试。</view>
        </view>
    </view>
    <view class="weui-form-preview" wx:for="{{ papers }}" wx:key="{{ index }}" style="margin-bottom: 20rpx;width: 100%;">
        <view class="weui-form-preview__hd">
            <view class="weui-form-preview__item">
                <view class="weui-form-preview__label" style="font-size: 25rpx">{{ item.paper_name }}</view>
            </view>
        </view>
        <view class="weui-form-preview__bd">
            <view class="weui-form-preview__item">
                <view class="weui-form-preview__label">及格分数</view>
                <view class="weui-form-preview__value">{{ item.passing_score }}分</view>
            </view>
            <view class="weui-form-preview__item">
                <view class="weui-form-preview__label">所得分数</view>
                <view class="weui-form-preview__value">{{ item.score == -1 ? '缺考' : item.score }}{{ item.score == -1 ? '' : '分' }}</view>
            </view>
            <view class="weui-form-preview__item">
                <view class="weui-form-preview__label">考试时间</view>
                <view class="weui-form-preview__value" >{{ item.exam_time }}</view>
            </view>
            <view class="weui-form-preview__item">
                <view class="weui-form-preview__label">出题日期</view>
                <view class="weui-form-preview__value">{{ item.set_date }}</view>
            </view>
            <view class="weui-form-preview__item">
                <view class="weui-form-preview__label">参考日期</view>
                <view class="weui-form-preview__value">{{ item.done_date }}</view>
            </view>
        </view>
        <view class="weui-form-preview__ft">
            <!--<button class="weui-form-preview__btn weui-btn_plain-primary" data-exam-paper-id="{{ item.exam_paper_id }}" data-test-time="{{ item.test_time }}" data-paper-name="{{ item.paper_name }}" style="background-color: #3CC51F;color: #F8F8F8" bind:tap="onTryOneMoreClicked">进行考试</button>-->
            <button class="weui-form-preview__btn weui-btn_plain-default" data-exam-paper-id="{{ item.exam_paper_id }}" data-paper-name="{{ item.paper_name }}" bind:tap="onPaperDetailClicked">查看答题情况</button>
        </view>
    </view>
</view>