<view class="swiper-tab">
    <view class="swiper-tab-item {{ currentTab == 0 ? 'active' : '' }}" data-current="0" bindtap="clickTab">我的红包</view>
    <view class="swiper-tab-item {{ currentTab == 1 ? 'active' : '' }}" data-current="1" bindtap="clickTab">我的积分</view>
</view>
<swiper current="{{ currentTab }}" duration="300"  bindchange="swiperTab">
    <swiper-item style="height: 80%">
        <view style="margin: 100rpx 0 40rpx 0; display: flex; flex-direction: column; justify-content: center">
            <text>本月红包总额</text>
            <text style="font-size: 70rpx; color: red">{{ rp_amount }}<text style="color: red; font-size: 30rpx">元</text></text>
            <view style="width: 100%; display: flex; flex-direction: row; justify-content: center; margin-top: 60rpx">
                <text style="width: 95%; box-shadow: 0 5rpx 5rpx -3rpx #888888">红包详情</text>
            </view>
            <view style="display: table; width: 100%">
                <view class="detail-row">
                    <text class="detail-header">金额</text>
                    <text class="detail-header">红包类型</text>
                    <text class="detail-header">获得时间</text>
                </view>
                <view class="detail-row" wx:for="{{ rp_detail }}" wx:key="{{ item.rp_id }}">
                    <text class="detail-content">{{ item.count }}</text>
                    <text class="detail-content">{{ item.type_name }}</text>
                    <text class="detail-content">{{ item.date_time }}</text>
                </view>
            </view>
        </view>
    </swiper-item>
    <swiper-item>
        <view style="margin: 100rpx 0 40rpx 0; display: flex; flex-direction: column; justify-content: center">
            <text>我的积分余额</text>
            <text style="font-size: 70rpx; color: red">{{ ap_amount }}<text style="color: red; font-size: 30rpx">分</text></text>
            <view style="width: 100%; display: flex; flex-direction: row; justify-content: center; margin-top: 60rpx">
                <text style="width: 95%; box-shadow: 0 5rpx 5rpx -3rpx #888888">积分详情</text>
            </view>
            <view style="display: table; width: 100%">
                <view class="detail-row">
                    <text class="detail-header">分值</text>
                    <text class="detail-header">积分类型</text>
                    <text class="detail-header">获得时间</text>
                </view>
                <view class="detail-row" wx:for="{{ ap_detail }}" wx:key="{{ item.ap_id }}">
                    <text class="detail-content">{{ item.count }}</text>
                    <text class="detail-content">{{ item.type_name }}</text>
                    <text class="detail-content">{{ item.date_time }}</text>
                </view>
            </view>
        </view>
    </swiper-item>
</swiper>
