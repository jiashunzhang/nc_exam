<!--pages/test/score/score.wxml-->
<view style="width: 100%;height: 100%;display: flex;flex-direction: column;justify-content: center;align-items: center">
    <text style="align-self: flex-start;font-size: 25rpx">用时：{{ elapsed }}，连续练习天数：{{ signin_count }}</text>
    <text>您本次得分</text>
    <text style="font-size: 90rpx;color: {{ score >= passing_score ? 'red' : 'green' }}">{{ score }}</text>
    <text style="font-size: 30rpx">及格分数：{{ passing_score }}</text>
    <!--<view wx:if="{{ score >= passing_score }}" style="display: flex; flex-direction: column; justify-content: center; align-items: center">-->
    <view style="display: flex; flex-direction: column; justify-content: center; align-items: center; font-size: 40rpx">
        <image wx:if="{{ show_red_packet_image }}" src="https://ncexam-1255671825.cos.ap-chengdu.myqcloud.com/hongbao.jpg" style="width: 200rpx;height: 200rpx;margin: 100rpx 0 100rpx 0" bind:tap="onRedPacketOpened" />
        <block wx:if="{{ fullwork_packet != null }}">
            <text wx:if="{{ fullwork_packet == -1 }}" style="color: #FF7F24">本次练习无全勤红包。</text>
            <text wx:elif="{{ fullwork_packet == 0 }}" style="color: blue">唉呀，全勤红包里空空如也。祝您下次好运！</text>
            <text wx:else style="color: red">恭喜！您开到了{{ fullwork_rp }}元的全勤红包！</text>
        </block>
        <block wx:if="{{ fullmark_packet != null }}">
            <text wx:if="{{ fullmark_packet == -1 }}" style="color: #FF7F24">本次练习无满分红包。</text>
            <text wx:elif="{{ fullmark_packet == 0 }}" style="color: blue">唉呀，满分红包里空空如也。祝您下次好运！</text>
            <text wx:else style="color: #FF7F24">恭喜！您开到了{{ fullmark_rp }}元的满分红包！</text>
        </block>
    </view>
    <!--<text wx:else style="margin: 100rpx 0 100rpx 0">您未达到及格分数，无法获得红包。</text>-->
    <button type="warn" bind:tap="onViewPaper">查看刚才的答卷</button>
</view>