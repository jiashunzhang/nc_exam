<!--pages/welcome/welcome.wxml-->
<view style="width: 100%;height: 100%;margin: 0;padding: 0;display: flex;flex-direction: column;align-items: center">
    <text class="title" style="margin-top: 80rpx">北京局集团公司</text>
    <text class="title">南仓站职工微信答题系统</text>
    <view wx:if="{{ userInfo.avatarUrl && userInfo.nickName }}" style="display: flex; flex-direction: column; align-items: center; justify-content:center; margin: 0; padding: 0">
        <image src="{{ userInfo.avatarUrl }}" style="width: 128rpx;height: 128rpx;margin-top: 160rpx"></image>
        <text style="margin-bottom: 80rpx">{{ userInfo.nickName }}</text>
    </view>
    <view wx:else style="{{ userInfo.avatarUrl && userInfo.nickName }}" style="display: flex; flex-direction: column; align-items: center; justify-content:center; margin: 0; padding: 0">
        <view>姓名：{{ privateUserInfo.mem_name }}</view>
        <view>车间：{{ privateUserInfo.mem_dep }}</view>
        <view>工种：{{ privateUserInfo.mem_wt }}</view>
        <view>职名：{{ privateUserInfo.mem_pos }}</view>
    </view>
    <button wx:if="{{ !rejectlogin }}" open-type="getUserInfo" type="primary" style="margin: 15rpx" bind:tap="onCurrentUserLogin">使用当前用户使用</button><button type="default" bind:tap="onOtherUserLogin">使用其他用户登录</button>
    <text style="position: absolute;bottom: 0;font-size: 25rpx;color: white">南仓站信息化车间©{{ curYear }}</text>
</view>